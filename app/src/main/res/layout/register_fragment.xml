<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/formain"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="80dp"/>
    <EditText
        android:id="@+id/name_register"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:background="@drawable/edit_custom"
        android:layout_below="@id/register_text"
        android:padding="10dp"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/email_register"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:background="@drawable/edit_custom"
        android:padding="10dp"
        android:layout_below="@id/name_register"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/password_register"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:background="@drawable/edit_custom"
        android:padding="10dp"
        android:layout_below="@id/email_register"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/re_password_register"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Re-type password"
        android:background="@drawable/edit_custom"
        android:padding="10dp"
        android:layout_below="@id/password_register"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/register_button"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/re_password_register"
        android:text="Register"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/swipe_text"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/arrow_previous"
        />
    <TextView
        android:id="@+id/swipe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe right for login"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>